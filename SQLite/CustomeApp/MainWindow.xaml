<Window x:Class="CustomeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="顧客管理アプリケーション" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左側：顧客情報とリスト -->
        <StackPanel Margin="10" Grid.Column="0">
            <TextBlock Text="名前:"/>
            <TextBox x:Name="NameTextBox" Margin="0,5,0,0"/>
            <TextBlock Text="電話番号:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,5,0,0" />
            <TextBlock Text="郵便番号:"/>
            <TextBox x:Name="TaxTextBox" Margin="0,5,0,0" />
            <TextBlock Text="住所:"/>
            <TextBox x:Name="AddressTextBox" Margin="0,5,0,0"/>

            <Button Content="画像" x:Name="ImageButton" Click="ImageButton_Click" Height="30" Width="80" Margin="0,10,280,0"/>
            <Button Content="Save" x:Name="SaveButton" Click="SaveButton_Click" Margin="0,5,0,0"/>
            <Button Content="Delete" x:Name="DeleteButton" Click="DeleteButton_Click" Margin="0,5,0,0"/>
            <Button Content="Update" x:Name="UpdateButton" Click="UpdateButton_Click" Margin="0,5,0,0"/>

            <TextBox x:Name="SearchTextBox" FontSize="16" TextChanged="SearchTextBox_TextChanged"/>

            <ListView x:Name="PersonListView" Margin="0,5,0,0" Height="206" SelectionChanged="PersonListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding ImagePath}" Width="40" Height="40" Margin="5"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontSize="16" />
                                <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- 右側：画像表示 -->
        <Border Grid.Column="1" BorderBrush="Blue" BorderThickness="1" Margin="10">
            <Image x:Name="PreviewImage" Stretch="Uniform"/>
        </Border>
    </Grid>
</Window>
