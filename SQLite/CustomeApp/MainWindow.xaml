<Window x:Class="CustomeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomeApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="450" Width="300">
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <TextBox x:Name="NameTextBox" Margin="100,5,0,0"/>
            <TextBox x:Name="PhoneTextBox" Margin="100,5,0,0" />
            <TextBox x:Name="AddressTextBox" Margin="100,5,0,0"/>
            <Button Content="画像" x:Name="ImargemButton" Click="ImargemButton_Click" Height="40" Width="50" Margin="0,0,220,3"/>
            <Button Content="Save" x:Name="SaveButton" Click="SaveButton_Click"/>
            <Button Content="Delete" x:Name="DeleteButton" Click="DeleteButton_Click"/>
            <Button Content="Update" x:Name="UpdateButton" Click="UpdateButton_Click"/>
            <TextBox x:Name="SearchTextBox" Margin="0,5,0,0" FontSize="20" TextChanged="SearchTextBox_TextChanged"/>
            <ListView x:Name="PersonListView" Margin="0,5,0,0" Height="600" SelectionChanged="PersonListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Id}"/>
                            <TextBlock Text="{Binding Name}" FontSize="20" />
                            <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
