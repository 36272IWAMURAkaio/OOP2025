<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        mc:Ignorable="d"
        Title="Weather Luxury" Height="700" Width="450" 
        WindowStartupLocation="CenterScreen">

    <Border x:Name="MainBackground">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4facfe" Offset="0.0"/>
                <GradientStop Color="#00f2fe" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#88FFFFFF" CornerRadius="15" Padding="5" Margin="0,0,0,10">
                <ComboBox x:Name="CityComboBox" 
                          DisplayMemberPath="Name" 
                          SelectionChanged="CityComboBox_SelectionChanged"
                          FontSize="16" FontWeight="SemiBold"
                          Background="Transparent" BorderThickness="0" 
                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                          Height="35"/>
            </Border>

            <Border Grid.Row="1" Background="#AAFFFFFF" CornerRadius="20" Margin="10">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image x:Name="CurrentWeatherIcon" Width="130" Height="130" Margin="0,0,0,10">
                        <Image.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                        </Image.Effect>
                    </Image>

                    <TextBlock x:Name="CurrentTempText" Text="--℃" FontSize="60" FontWeight="Thin" HorizontalAlignment="Center" Foreground="#333"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <StackPanel Margin="15,0">
                            <TextBlock Text="WIND" FontSize="10" Foreground="#666" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="CurrentWindText" Text="-- m/s" FontSize="16" FontWeight="Bold" Foreground="#444"/>
                        </StackPanel>
                        <Border Width="1" Height="30" Background="#CCC"/>
                        <StackPanel Margin="15,0">
                            <TextBlock Text="HUMIDITY" FontSize="10" Foreground="#666" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="CurrentHumidityText" Text="-- %" FontSize="16" FontWeight="Bold" Foreground="#444"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <TextBlock Text="WEEKLY FORECAST" FontSize="12" FontWeight="Bold" Foreground="White" Margin="15,0,0,5" VerticalAlignment="Top">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="1" BlurRadius="2"/>
                    </TextBlock.Effect>
                </TextBlock>

                <ListView x:Name="DailyForecastList" 
                          ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                          ScrollViewer.VerticalScrollBarVisibility="Disabled"
                          BorderThickness="0" Background="Transparent" Margin="0,20,0,0">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Grid>
                                            <ContentPresenter />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1" CenterX="40" CenterY="60"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Panel.ZIndex" Value="1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#CCFFFFFF" CornerRadius="15" Width="80" Height="130" Margin="8,5,8,15">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.15"/>
                                </Border.Effect>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Date}" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#555" Margin="0,0,0,5"/>

                                    <TextBlock Text="🌤" HorizontalAlignment="Center" FontSize="24" Margin="0,5"/>

                                    <TextBlock Text="{Binding MaxTemp, StringFormat='{}{0:F0}°'}" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#333" FontSize="16"/>
                                    <TextBlock Text="{Binding MinTemp, StringFormat='{}{0:F0}°'}" HorizontalAlignment="Center" Foreground="#777" FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </Border>
</Window>