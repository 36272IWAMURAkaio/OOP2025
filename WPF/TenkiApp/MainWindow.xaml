<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weather App" Height="250" Width="350">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TextBox とプレースホルダー -->
        <Grid>
            <TextBox x:Name="CityTextBox"
                     Width="200" Height="30"
                     Margin="0 0 10 0"
                     TextChanged="CityTextBox_TextChanged"/>

            <!-- Placeholder -->
            <TextBlock x:Name="Placeholder"
                       Foreground="Gray"
                       Margin="5 5 0 0"
                       IsHitTestVisible="False"
                       VerticalAlignment="Center"
                       Visibility="Visible"/>
        </Grid>

        <Button Content="検索" Width="80" Height="30"
                Margin="220 0 0 0"
                Click="Search_Click"/>

        <StackPanel Grid.Row="1" Margin="0 20 0 0">
            <TextBlock x:Name="WeatherText" FontSize="18"/>
            <TextBlock x:Name="TempText" FontSize="18" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
