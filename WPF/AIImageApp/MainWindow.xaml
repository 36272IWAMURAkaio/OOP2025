<Window x:Class="AIImageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Image Generator" Height="650" Width="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 入力欄 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox x:Name="PromptBox"
                     Width="500"
                     Height="30"
                     Margin="0,0,10,0"
                     FontSize="14"
                     Text="桜が舞う近未来の東京の夜景" />
            <Button Content="生成"
                    Width="100"
                    Height="30"
                    Click="GenerateImage_Click"/>
        </StackPanel>

        <!-- プレビュー -->
        <Border Grid.Row="1" Margin="0,10,0,10" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer>
                <Image x:Name="ResultImage"/>
            </ScrollViewer>
        </Border>

        <!-- ステータス -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="2"
                   FontSize="12"
                   Foreground="Gray"
                   Text="プロンプトを入力して生成してください。"/>
    </Grid>
</Window>
